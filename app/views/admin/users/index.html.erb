<% content_for(:title, 'ユーザー一覧') %>
<div class="contener mb-5 pt-2">
  <h1>ユーザー一覧</h1>
  <div class="row">
    <div class="col-md-12 md-3">
      <%= render 'search_form' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">氏名</th>
            <th scope="col">権限</th>
            <th scope="col">作成日時</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
        <%= render @users %>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= paginate @users %>
      </div>
    <div>
  </div>
</div>