<% content_for(:title, 'ユーザー編集') %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1>ユーザー編集</h1>
      <%= form_with model: @users, url: admin_user_path, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control mb-3' %>
 
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control mb-3' %>
 
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control mb-3' %>
 
        <%= f.label :avatar %>
        <%= f.file_field :avatar, onchange: 'previewFileWithId(preview)', class: 'form-control mb-3', accept: 'image/*' %>
        <%= f.hidden_field :avatar_cache %>
 
        <div class='mt-3 mb-3'>
          <%= image_tag @users.avatar.url,
                        class: 'rounded-circle',
                        id: 'preview',
                        size: '100x100' %>
        </div>
        <div class="form-group">
          <%= f.label :role %>
          <%= f.select :role, User.roles_i18n.invert, {}, class: 'form-control' %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>