<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <%= link_to root_path,  class: "brand-link" do %>
    <%= image_tag current_user.avatar_url, size: '40x40', class: 'rounded-circle mr15' %>
      <span class="brand-text font-weight-light">管理者ユーザー</span> 
  <% end %>
 
   
  <div class="sidebar">
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="info">
        <a href="#" class="d-block"><%= current_user.decorate.full_name %></a>
      </div>
    </div>
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to admin_videos_path, class: "nav-link" do %>
            <i class="far fa-file-video"></i>
            <p>
              投稿動画一覧
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to admin_users_path, class: "nav-link" do %>
            <i class="fas fa-user-friends"></i>
            <p>
             　ユーザー
            </p>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</aside>