<% content_for(:title, '動画一覧') %>
 <div class="container mb-5 pt-2">
   <h1>投稿動画一覧</h1>
   <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form' %>
    </div>
   </div>
   <div class="row">
     <div class="col-sm-12">
       <table class="table table-striped">
         <thead>
         <tr>
           <th scope="col">Id</th>
           <th scope="col">タイトル</th>
           <th scope="col">氏名</th>
           <th scope="col">投稿日時</th>
           <th scope="col"></th>
         </tr>
         </thead>
         <tbody>
         <%= render @videos %>
         </tbody>
       </table>
     </div>
   </div>
   <div class="row">
     <div class="col-sm-12">
       <!-- ページネーション -->
       <%= paginate @videos %>
     </div>
   </div>
</div>