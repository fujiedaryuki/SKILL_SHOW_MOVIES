<%= form_with model: video, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class='mt-3 mb-3'>
    <%= video_tag video.video_image.url,
                  id: 'preview',
                  class: 'card-img-top img-fluid', size: '300x200', controls: true, autobuffer: true %>
  </div>
  <div class="form-group">
    <%= f.label :video_image %>
    <%= f.file_field :video_image, onchange: 'previewFileWithId(preview)', class: 'form-control mb-3', accept: 'video/*' %>
    <%= f.hidden_field :video_image_cache %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: "4" %>
  </div>
  
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
