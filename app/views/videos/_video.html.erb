<div class="col-sm-12 col-lg-4 mb-3">
  <div id="video-id-<%= video.id %>">
    <div class="card">
    <%= video_tag video.video_image_url, class: 'card-img-top', size: '300x200', controls: true, autobuffer: true %>
      <div class="card-body">
        <h4 class="card-title">
          <a href="#">
            <%= video.title %>
          </a>
        </h4>
        <div class='mr10 float-right'>
          <a href="#"><%= icon 'fas', 'trash', class: 'pr-1' %></a>
          <a href="#"><%= icon 'fa', 'pen' %></a>
        </div>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= icon 'far', 'user' %>
            <%= video.user.decorate.full_name %>
          </li>
          <li class="list-inline-item">
            <%= icon 'far', 'calendar' %>
            <%= l video.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= video.body %></p>
      </div>
    </div>
  </div>
</div>