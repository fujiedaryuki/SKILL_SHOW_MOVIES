<div class="col-sm-12 col-lg-4 mb-3">
  <div id="video-id-<%= video.id %>">
    <div class="card">
    <%= video_tag video.video_image_url, class: 'card-img-top', size: '300x200', controls: true, autobuffer: true %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to video.title, video_path(video)%>
        </h4>
        <% if current_user.own?(video) %>
          <%= render 'crud_menus', video: video %>
        <% else %>
          <%= render 'like_button', video: video %>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item">
            <i class="fas fa-running">
              <%= video.user.decorate.full_name %>
            </i>
          </li>
          <li class="list-inline-item">
            <i class="fas fa-calendar-alt">
              <%= l video.created_at, format: :long %>
            </i>
          </li>
          <li class="list-inline-item">
            <%= render 'stars', video: video %>
          </li>
        </ul>
        <p class="card-text"><%= video.body %></p>
      </div>
    </div>
  </div>
</div>