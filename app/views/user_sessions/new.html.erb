<% content_for(:title, 'ログイン') %>
<div class="before_login">
  <div class="container">
    <div class="row">
      <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>ログイン</h1>
        <%= form_with url: login_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :email, t('activerecord.attributes.user.email') %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, t('activerecord.attributes.user.password')  %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit 'ログイン', class: 'btn btn-primary' %>
          </div>
        <% end %>
        <div class='text-center'>
          <%= link_to '登録ページへ', new_user_path,  class: 'btn btn-primary'%>
          <%= link_to 'ゲストユーザー', guest_path, method: :post, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
</div>